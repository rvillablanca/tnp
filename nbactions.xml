<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath cl.rvillablanca.tnp.TnpApplication</exec.args>
                <exec.executable>java</exec.executable>
                <Env.POSTGRES_URL>jdbc:postgresql://localhost:5432/tnp</Env.POSTGRES_URL>
                <Env.POSTGRES_USERNAME>postgres</Env.POSTGRES_USERNAME>
                <Env.POSTGRES_PASSWORD>rodrigo</Env.POSTGRES_PASSWORD>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath cl.rvillablanca.tnp.TnpApplication</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath cl.rvillablanca.tnp.TnpApplication</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
    </actions>
